<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SortFragment">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分类"
            android:textColor="#FFF"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:id="@+id/v4"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>

                <RelativeLayout
                    android:id="@+id/rl_mobile"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape"
                    android:clickable="true">
                    <View
                        android:id="@+id/v10"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>

                    <ImageView
                        android:id="@+id/img_mobile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sort_image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_mobile"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="数码"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:textSize="18sp"/>
                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:layout_toRightOf="@+id/rl_mobile"
                    android:background="#fff"/>

                <RelativeLayout
                    android:id="@+id/rl_clothes"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape1"
                    android:clickable="true">

                    <View
                        android:id="@+id/v11"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>

                    <ImageView
                        android:id="@+id/img_clothes"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sort_clothes"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_clothes"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="服饰"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:typeface="monospace"/>


                </RelativeLayout>
                <View
                    android:id="@+id/v7"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:id="@+id/v5"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>

                <RelativeLayout
                    android:id="@+id/rl_books"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape2"
                    android:clickable="true">

                    <View
                        android:id="@+id/v12"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>

                    <ImageView
                        android:id="@+id/img_books"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/sort_books"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_books"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="书籍"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="italic"/>
                </RelativeLayout>

                <View
                    android:id="@+id/v2"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:layout_toRightOf="@+id/rl_richang"
                    android:background="#fff"/>

                <RelativeLayout
                    android:id="@+id/rl_sports_goods"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape4"
                    android:clickable="true">

                    <View
                        android:id="@+id/v13"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>

                    <ImageView
                        android:id="@+id/img_sports_goods"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sort_sport"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_sports_goods"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="体育用品"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="italic"/>


                </RelativeLayout>

                <View
                    android:id="@+id/v8"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:id="@+id/v6"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>

                <RelativeLayout
                    android:id="@+id/rl_electric"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape"
                    android:clickable="true">
                    <View
                        android:id="@+id/v14"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>
                    <View
                        android:id="@+id/v16"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:id="@+id/img_electric"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/sort_elec"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_electric"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="电器"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </RelativeLayout>
                <View
                    android:id="@+id/v3"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:layout_toRightOf="@+id/rl_electric"
                    android:background="#fff"/>


                <RelativeLayout
                    android:id="@+id/rl_others"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goods_layout_shape5"
                    android:clickable="true">
                    <View
                        android:id="@+id/v15"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"/>
                    <View
                        android:id="@+id/v17"
                        android:layout_width="200dp"
                        android:layout_height="3dp"
                        android:background="#fff"
                        android:layout_alignParentBottom="true"/>

                    <ImageView
                        android:id="@+id/img_others"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/sort_other"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_others"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="其它"
                        android:textStyle="italic"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </RelativeLayout>
                <View
                    android:id="@+id/v9"
                    android:layout_width="3dp"
                    android:layout_height="173dp"
                    android:background="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>