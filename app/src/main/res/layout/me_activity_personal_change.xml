<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/change_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_left"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/change_iv_back"
            android:layout_marginLeft="15dp"
            android:text="修改个人信息"
            android:textSize="20sp"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>

    <RelativeLayout
        android:id="@+id/change_rl_icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:clickable="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/change_icon_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/me_my"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="头像"
            android:textColor="#000"
            android:textSize="18sp"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>

    <RelativeLayout
        android:id="@+id/rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:padding="10dp"
        android:background="#fff">



        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/change_et_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textSize="18sp"
            android:background="@null"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>

    <RelativeLayout
        android:id="@+id/rl_qq"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="#fff">


        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="QQ号"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/change_et_qq_show"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textSize="18sp"
            android:background="@null"/>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>

    <RelativeLayout
        android:id="@+id/rl_wichat"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:padding="10dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_wichat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="微信号"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/change_et_wichat_show"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textSize="18sp"
            android:background="@null"/>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:padding="10dp"
        android:background="#fff">


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="电话"
            android:textColor="#000"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/change_et_phone_show"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"

            android:textSize="18sp"
            android:background="@null"/>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdddd">

    </View>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:background="#f5f5f7">
        <Button
            android:id="@+id/change_button"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定修改"
            android:textColor="#5c5a5a"
            android:textSize="16sp"/>



    </RelativeLayout>

</LinearLayout>